<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Which apps should still be available?"
        android:textColor="#000000"
        android:textSize="30dp" />

    <info.hoang8f.widget.FButton
        android:id="@+id/choose_apps"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:text="Choose apps"
        android:textAllCaps="false"
        android:textSize="20dp"
        fbutton:buttonColor="@color/fbutton_color_orange"
        fbutton:cornerRadius="30dp"
        fbutton:shadowEnabled="false" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/choose_apps_textView"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="20dp" />
</LinearLayout>